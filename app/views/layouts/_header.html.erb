            <li class="divider"></li>
            <li><%= link_to "<i class='fa fa-power-off'></i> Sign out".html_safe, destroy_developer_session_path, method: :delete %></li>
          </ul>
        <% elsif current_client %>
          <%= link_to "<i class='fa fa-user'></i> #{current_client.name} <i class='fa fa-chevron-down'></i>".html_safe, dashboard_path, class: "dropdown-toggle", :data => {:toggle => "dropdown"} %>
          <ul class="dropdown-menu">
            <li><%= link_to "<i class='fa fa-dashboard'></i> Dashboard".html_safe, dashboard_path, method: :get %></li>
